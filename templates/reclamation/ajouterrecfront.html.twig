{% extends 'basefront.html.twig' %}
 {% block body %}

 <div class="container-xxl py-5">
		<div class="container px-lg-5">
			<div class="row justify-content-center">
				<div class="col-lg-7">
					<div class="section-title position-relative text-center mb-5 pb-2 wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
						<h6 class="position-relative d-inline text-primary ps-4">Réclamation</h6>
						<h2 class="mt-2">Ajouter Réclamation</h2>
					</div>
					<div class="wow fadeInUp" data-wow-delay="0.3s" style="visibility: visible; animation-delay: 0.3s; animation-name: fadeInUp;">
						{{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
						<div class="row g-3">

							<div class="col-12">
								<div class="form-floating">
									{{ form_widget(f.email, {'attr': {'class': 'form-control','type':'email', 'placeholder': 'Enter  Email'}}) }}
									{{ form_errors(f.email,{ 'attr':{'class':'text-danger'}}) }}
									<label for="email">Votre Email</label>
								</div>
							</div>
							<div class="col-12">
								<div class="form-floating">
									{{ form_widget(f.sujet, {'attr': {'class': 'form-control','type':'text', 'placeholder': 'Enter  Sujet'}}) }}
									{{ form_errors(f.sujet,{ 'attr':{'class':'text-danger'}}) }}
									<label for="subject">Sujet</label>
								</div>
							</div>
							<div class="col-12">
								<div class="form-floating">
									{{ form_widget(f.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter  description','style': 'height: 150px'}}) }}
									{{ form_errors(f.description,{ 'attr':{'class':'text-danger'}}) }}
									{# <textarea class="form-control" placeholder="Leave a message here" id="message" style="height: 150px"></textarea> #}
									<label for="message">Description</label>
								</div>
							</div>
							<div
								{{ form_end(f) }}
							</div>
						</div>
						
					</div>
				</div>
			</div>
		</div>
	</div>
        

 {% endblock %}